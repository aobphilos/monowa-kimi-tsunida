{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["ES2021"],
    "module": "ESNext",
    "moduleResolution": "node",
    "removeComments": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2021",
    "paths": {
      "@monowa/message": ["libs/message/src/index.ts"],
      "@monowa/pubsub": ["libs/shared/pubsub/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
